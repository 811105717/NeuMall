<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neusoft.mall.usersettings.mapper.AccountMapper">
    <select id="checkUser" parameterType="String" resultType="com.neusoft.mall.entity.CustomerInfo">
        SELECT * FROM t_customer
        WHERE  customer_id= #{id} AND  customer_password = #{pwd}
    </select>

    <select id="getCustomerById" parameterType="String" resultType="com.neusoft.mall.entity.CustomerInfo">
        SELECT * FROM t_customer
        WHERE  customer_id= #{id}
    </select>

    <update id="updatePassword" parameterType="com.neusoft.mall.entity.CustomerInfo">
        UPDATE t_customer SET customer_password = #{customerPassword}
        WHERE customer_id = #{customerId}
    </update>

    <select id="userLogin" parameterType="String" resultType="com.neusoft.mall.entity.CustomerInfo">
        SELECT * FROM t_customer
        WHERE customer_number = #{userNumber} AND customer_password = #{pwd}
    </select>
</mapper>